{
  "name": "@rogal/front-linter",
  "version": "3.0.0-beta.6",
  "description": "Linting CLI for Frontend Projects",
  "main": "./bin/front-linter.js",
  "bin": {
    "front-linter": "./bin/front-linter.js"
  },
  "scripts": {
    "build": "",
    "test": "",
    "build-lint-files": "node scripts/createEslintFiles",
    "lint": "./node_modules/.bin/eslint --config=./default-preset-eslint.js bin src default-preset-eslint.js .prettierrc.js --ignore-pattern !.prettierrc.js",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-eslint": "10.1.0",
    "colors": "^1.3.3",
    "commander": "2.15.1",
    "eslint": "7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "figures": "^2.0.0",
    "prettier": "2.1.2",
    "simple-git": "1.92.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-scss": "^3.18.0"
  },
  "peerDependencies": {
    "eslint-import-resolver-typescript": "2.x"
  },
  "devDependencies": {
    "danger": "10.2.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "lodash.includes": "4.3.0",
    "shipjs": "0.20.1"
  },
  "lint-staged": {
    "src/**/*.js": "npm run lint -- --fix",
    "bin/**/*.js": "npm run lint -- --fix",
    "default-preset-eslint.js": [
      "npm run lint -- --fix"
    ],
    "typescript-preset-eslint.js": [
      "npm run lint -- --fix"
    ],
    "javascript-react-eslint.js": [
      "npm run lint -- --fix"
    ],
    "typescript-react-eslint.js": [
      "npm run lint -- --fix"
    ],
    ".prettierrc.js": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build-lint-files && lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "./default-preset-eslint.js"
    ]
  }
}
