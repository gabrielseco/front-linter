{
  "name": "@rogal/front-linter",
  "version": "4.0.0-beta.1",
  "description": "Linting CLI for Frontend Projects",
  "main": "./bin/front-linter.js",
  "bin": {
    "front-linter": "./bin/front-linter.js"
  },
  "scripts": {
    "build": "",
    "test": "",
    "build-lint-files": "node scripts/createEslintFiles",
    "lint": "./node_modules/.bin/eslint --config=./eslint.js bin src eslint-react.js .prettierrc.js --ignore-pattern !.prettierrc.js",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "babel-eslint": "10.1.0",
    "colors": "1.4.0",
    "commander": "2.15.1",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-react-perf": "3.3.0",
    "figures": "2.0.0",
    "prettier": "2.2.1",
    "simple-git": "1.92.0",
    "stylelint": "13.12.0",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-declaration-use-variable": "1.7.2",
    "stylelint-scss": "3.19.0"
  },
  "peerDependencies": {
    "eslint-import-resolver-typescript": "2.x",
    "typescript": "4.x"
  },
  "devDependencies": {
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "shipjs": "0.23.2",
    "typescript": "4.2.3"
  },
  "lint-staged": {
    "src/**/*.js": "npm run lint -- --fix",
    "bin/**/*.js": "npm run lint -- --fix",
    "eslint.js": [
      "npm run lint -- --fix"
    ],
    "eslint-react.js": [
      "npm run lint -- --fix"
    ],
    ".prettierrc.js": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build-lint-files && lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "./eslint.js"
    ]
  }
}
