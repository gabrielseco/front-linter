{
  "name": "@rogal/front-linter",
  "version": "1.0.0",
  "description": "Linting CLI for Frontend Projects",
  "main": "./bin/front-linter.js",
  "bin": {
    "front-linter": "./bin/front-linter.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "lint-stage": "./node_modules/.bin/eslint --config=./eslintrc.js --ignore-pattern !.prettierrc.js",
    "lint": "./node_modules/.bin/eslint --config=./eslintrc.js bin src eslintrc.js .prettierrc.js --ignore-pattern !.prettierrc.js",
    "eslint:print-rules-js": "./node_modules/.bin/eslint --config=./eslintrc.js --print-config .",
    "eslint:print-rules-ts": "./node_modules/.bin/eslint --config=./eslintrc-ts.js --print-config .",
    "eslint:prettier-check": "./node_modules/.bin/eslint --config=./eslintrc.js --print-config . | ./node_modules/.bin/eslint-config-prettier-check"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-eslint": "8.2.3",
    "colors": "^1.3.3",
    "commander": "2.15.1",
    "eslint": "5.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.0.2",
    "figures": "^2.0.0",
    "pluggable-babel-eslint": "^0.3.0",
    "prettier": "1.16.4",
    "simple-git": "1.92.0",
    "stylelint": "^9.5.0",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-declaration-use-variable": "^1.7.0",
    "stylelint-scss": "^3.3.0"
  },
  "lint-staged": {
    "src/**/*.js": "npm run lint-stage",
    "bin/**/*.js": "npm run lint-stage",
    "eslintrc.js": "npm run lint-stage",
    ".prettierrc.js": "npm run lint-stage"
  },
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "^7.2.2"
  }
}
